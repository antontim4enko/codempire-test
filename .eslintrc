{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends" : "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "linebreak-style": 0,
        "indent": ["error", 4]
    }
}